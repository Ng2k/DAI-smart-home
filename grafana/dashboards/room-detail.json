
{
  "uid": "room-detail",
  "title": "Room Detail",
  "tags": ["dai", "room"],
  "timezone": "browser",
  "schemaVersion": 42,
  "version": 4,
  "refresh": "5s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "room",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(room_temperature_celsius, room_id)",
        "refresh": 1,
        "multi": false,
        "includeAll": false,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "üå° Temperature (¬∞C)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "room_temperature_celsius{room_id=\"$room\"}",
          "legendFormat": "Temperature"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "üíß Humidity (%)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "room_humidity_percent{room_id=\"$room\"}",
          "legendFormat": "Humidity"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "üéØ Temperature Error (¬∞C)",
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 4 },
      "targets": [
        {
          "expr": "room_temperature_error_celsius{room_id=\"$room\"}",
          "legendFormat": "Error vs target"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "decimals": 2,
          "custom": {
            "axisCenteredZero": true
          },
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 3,
      "type": "state-timeline",
      "title": "‚öôÔ∏è Actuator States",
      "gridPos": { "x": 0, "y": 10, "w": 24, "h": 5 },
      "targets": [
        {
          "expr": "room_actuator_state{room_id=\"$room\"}",
          "legendFormat": "{{actuator}}"
        }
      ]
    },
    {
      "id": 9,
      "type": "state-timeline",
      "title": "üö® Comfort Violation State",
      "gridPos": { "x": 0, "y": 15, "w": 24, "h": 3 },
      "targets": [
        {
          "expr": "room_comfort_violation{room_id=\"$room\"}",
          "legendFormat": "Comfort violation"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "üö´ Policy Blocks (last 5 min)",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "increase(room_policy_blocks_total{room_id=\"$room\"}[5m])",
          "legendFormat": "Blocked actions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "üìà Commands Issued / Minute",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "rate(room_commands_total{room_id=\"$room\"}[1m])",
          "legendFormat": "Command rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": { "mode": "palette-classic" }
        }
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard",
        "name": "Annotations",
        "enable": true,
        "hide": true
      }
    ]
  }
}

