{
  "uid": "system-health",
  "title": "System Health & Coordination",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "tags": ["DAI", "system"],
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Active Actuators",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "orchestrator_active_actuators",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Policy Changes Rate",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(orchestrator_policy_changes_total[5m])",
          "legendFormat": "policy changes",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 5 },
      "targets": [
        {
          "expr": "process_cpu_user_seconds_total",
          "legendFormat": "cpu",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Memory Usage",
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 5 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "memory",
          "refId": "A"
        }
      ]
    }
  ]
}
