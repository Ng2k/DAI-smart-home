
{
  "uid": "system-health",
  "title": "System Health & Coordination",
  "tags": ["DAI", "system"],
  "timezone": "browser",
  "schemaVersion": 42,
  "version": 2,
  "refresh": "5s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "‚öôÔ∏è Active Actuators (System Load)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 3 },
      "targets": [
        {
          "expr": "sum(room_actuator_state)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "üß† CPU Usage (Agents Runtime)",
      "gridPos": { "x": 0, "y": 3, "w": 24, "h": 5 },
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total[1m])",
          "legendFormat": "CPU user time / sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "üíæ Memory Usage (Resident Set)",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 5 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "RSS memory",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 200000000 },
              { "color": "red", "value": 500000000 }
            ]
          }
        }
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard",
        "name": "Annotations",
        "enable": true,
        "hide": true
      }
    ]
  }
}
